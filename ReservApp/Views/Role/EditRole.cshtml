@model ReservApp.Models.EditRoleViewModel

@{
    ViewBag.Title = " Edit Role";
}

<div class="row">
        <form method="post">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />*@
            <div class="container_roleMngEdit" style=" display: flex; justify-content: space-between; flex-wrap: wrap; width: 71rem; margin-top: 44px;">
                <div style="width: 21rem">
                    <div class="form-group">
                        <label asp-for="Id" class="control-label">Id du rôle</label>
                        <input asp-for="Id" disabled class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RoleName" class="control-label">Nom du rôle</label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Sauvegarder" class="btn btn-primary" />
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-outline-dark">Retourner à la liste</a>
                    </div>

                </div>

                <div style="width: 37rem">
                    <div class="card">
                        <div class="card-header">
                            <h3>Utilisateurs avec ce rôle</h3>
                        </div>
                        <div class="card-body" style="overflow: scroll; height: 406px;">
                            @if (Model.Users.Any())
                            {
                                foreach (var user in Model.Users)
                                {
                                    <h5 class="card-title">@user</h5>
                                }
                            }
                            else
                            {
                                <h5 class="card-title">Aucun utilisateur pour le moment !</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-action="EditUsersInRole"
                               asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Assigner les rôles </a>
                        </div>
                    </div>

                </div>
            </div>

        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
